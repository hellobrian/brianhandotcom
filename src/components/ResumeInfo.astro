<style>
  .resume-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style-type: none;
    padding: 0;
    margin-top: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .resume-info li {
    block-size: 18px;
  }

  .resume-info li a {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    block-size: 18px;
  }

  li.website {
    display: none;
  }

  @media screen and (max-width: 720px) {
    .resume-info {
      grid-template-columns: 1fr;
    }
  }

  @media print {
    li.website {
      display: initial;
    }
  }
</style>
