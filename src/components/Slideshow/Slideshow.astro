---
import SlideshowComponent from "./Slideshow";

type ImageType = {
  src: string;
  alt?: string;
};

type Props = {
  images: ImageType[];
  initialFullView?: boolean;
};

const { images, initialFullView = false } = Astro.props as Props;
---

<SlideshowComponent
  client:visible
  images={images}
  initialFullView={initialFullView}
/>
