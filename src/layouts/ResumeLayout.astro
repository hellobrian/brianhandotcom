---
import ResumeHead from "../components/ResumeHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ResumeInfo from "../components/ResumeInfo.astro";
import SaveResume from "../components/SaveResume.astro";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ResumeHead
      title={frontmatter.title}
      description={frontmatter.description}
    />
  </head>
  <body>
    <Header />

    <main class="resume">
      <div class="title-container">
        <h2 class="title">{frontmatter.title}</h2>
        <SaveResume />
      </div>
      <ResumeInfo frontmatter={frontmatter} />
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  main.resume {
    max-width: 720px;
  }

  h2.title {
    font-size: var(--step-2);
    margin-bottom: 1rem;
    text-decoration: none;
    letter-spacing: -0.3px;
  }

  .title-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .title {
    margin-bottom: 0 !important;
  }
</style>
