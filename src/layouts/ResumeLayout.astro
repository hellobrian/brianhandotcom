---
import ResumeHead from "../components/ResumeHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ResumeHead
      title={frontmatter.title}
      description={frontmatter.description}
    />
  </head>
  <body>
    <Header />

    <main class="resume">
      <div class="title-container">
        <h2 class="title">{frontmatter.title}</h2>
        <aside>
          <button class="save-as-pdf" onclick="window.print()"
            >Save resume as PDF</button
          >
        </aside>
      </div>
      <ul class="resume-info">
        <li>
          <a href={`mailto:${frontmatter.email}`}
            ><svg
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              ><path
                fill="#0F0F0F"
                fill-rule="evenodd"
                d="M20 4a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3H4a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3h16Zm-.747 2H4.747l6.633 5.237a1 1 0 0 0 1.24 0L19.253 6ZM3 7.169V17a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1V7.169l-7.141 5.638a3 3 0 0 1-3.718 0L3 7.168Z"
                clip-rule="evenodd"></path></svg
            >{frontmatter.email}</a
          >
        </li>
        <li>
          <a
            href={frontmatter.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            ><svg
              aria-hidden="true"
              width="18"
              height="18"
              viewBox="0 0 16 16"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
                ><path
                  fill="#0A66C2"
                  d="M12.225 12.225h-1.778V9.44c0-.664-.012-1.519-.925-1.519-.926 0-1.068.724-1.068 1.47v2.834H6.676V6.498h1.707v.783h.024c.348-.594.996-.95 1.684-.925 1.802 0 2.135 1.185 2.135 2.728l-.001 3.14zM4.67 5.715a1.037 1.037 0 01-1.032-1.031c0-.566.466-1.032 1.032-1.032.566 0 1.031.466 1.032 1.032 0 .566-.466 1.032-1.032 1.032zm.889 6.51h-1.78V6.498h1.78v5.727zM13.11 2H2.885A.88.88 0 002 2.866v10.268a.88.88 0 00.885.866h10.226a.882.882 0 00.889-.866V2.865a.88.88 0 00-.889-.864z"
                ></path></g
              ></svg
            >{frontmatter.linkedin}</a
          >
        </li>
        <li>
          <a href={frontmatter.github} target="_blank" rel="noopener noreferrer"
            ><svg
              aria-hidden="true"
              width="18"
              height="18"
              viewBox="0 0 16 16"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
                ><path
                  fill="#161514"
                  fill-rule="evenodd"
                  d="M8 1C4.133 1 1 4.13 1 7.993c0 3.09 2.006 5.71 4.787 6.635.35.064.478-.152.478-.337 0-.166-.006-.606-.01-1.19-1.947.423-2.357-.937-2.357-.937-.319-.808-.778-1.023-.778-1.023-.635-.434.048-.425.048-.425.703.05 1.073.72 1.073.72.624 1.07 1.638.76 2.037.582.063-.452.244-.76.444-.935-1.554-.176-3.188-.776-3.188-3.456 0-.763.273-1.388.72-1.876-.072-.177-.312-.888.07-1.85 0 0 .586-.189 1.924.716A6.711 6.711 0 018 4.381c.595.003 1.194.08 1.753.236 1.336-.905 1.923-.717 1.923-.717.382.963.142 1.674.07 1.85.448.49.72 1.114.72 1.877 0 2.686-1.638 3.278-3.197 3.45.251.216.475.643.475 1.296 0 .934-.009 1.688-.009 1.918 0 .187.127.404.482.336A6.996 6.996 0 0015 7.993 6.997 6.997 0 008 1z"
                  clip-rule="evenodd"></path></g
              ></svg
            >{frontmatter.github}</a
          >
        </li>
      </ul>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  main.resume {
    max-width: 720px;
  }

  h2.title {
    font-size: var(--step-2);
    margin-bottom: 1rem;
    text-decoration: none;
    letter-spacing: -0.3px;
  }

  .resume-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style-type: none;
    padding: 0;
    margin-top: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .resume-info li {
    block-size: 18px;
  }

  .resume-info li a {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    block-size: 18px;
  }

  @media screen and (max-width: 720px) {
    .resume-info {
      grid-template-columns: 1fr;
    }
  }

  .title-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .title {
    margin-bottom: 0 !important;
  }

  aside {
    display: flex;
    align-items: center;
  }

  .save-as-pdf {
    background-color: white;
    border: 2px solid var(--accent-light);
    min-block-size: var(--step-2);
    border-radius: 16px;
    padding: 0.25rem 0.5rem;
    font-weight: bold;
    cursor: pointer;
  }

  .save-as-pdf:hover {
    background-color: var(--accent-light);
    transition: background-color 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
  }
</style>
